<UserControl x:Class="UI_Data.Views.DataRaw"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"         
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="10"/>
            <ColumnDefinition Width="{Binding SplitterWidth, Mode=OneWay}"/>
            <ColumnDefinition Width="{Binding ChartViewWidth, Mode=OneWay}"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button Width="18" Height="18" Margin="10,0,10,0"  Command="{Binding ShowTrendCommand}" ToolTip="Show Trend Chart" >
                    <Button.Background>
                        <ImageBrush ImageSource="2d_plot.png"/>
                    </Button.Background>
                </Button>
                <Button Width="18" Height="18" Margin="0,0,10,0" Command="{Binding ShowHistogramCommand, Mode=OneWay}" ToolTip="Show Histogram Chart">
                    <Button.Background>
                        <ImageBrush ImageSource="histogram.png"/>
                    </Button.Background>
                </Button>
                <Button Width="18" Height="18" Margin="0,0,10,0" Command="{Binding ShowBoxCommand, Mode=OneWay}" ToolTip="Show Box Chart">
                    <Button.Background>
                        <ImageBrush ImageSource="box_plot.png"/>
                    </Button.Background>
                </Button>
                <Button Width="18" Height="18" Margin="0,0,10,0" Command="{Binding ShowWaferMapCommand, Mode=OneWay}" ToolTip="Show Wafer Map">
                    <Button.Background>
                        <ImageBrush ImageSource="wafer_binning.png"/>
                    </Button.Background>
                </Button>
                <Button Width="18" Height="18" Margin="0,0,10,0" Command="{Binding ExportToExcelCommand, Mode=OneWay}" ToolTip="Export To Excel">
                    <Button.Background>
                        <ImageBrush ImageSource="database.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            <DataGrid x:Name="rawGrid" Grid.Row="1" ItemsSource="{Binding DataTable}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="RowHeaderClick" >
                        <prism:InvokeCommandAction Command="{Binding OnSelectRow}" CommandParameter="{Binding ElementName=rawGrid}"/>
                    </i:EventTrigger>
                    <i:EventTrigger EventName="ColumnHeaderClick" >
                        <prism:InvokeCommandAction Command="{Binding OnSelectColumn}"  CommandParameter="{Binding ElementName=rawGrid}"/>
                    </i:EventTrigger>
                    <i:EventTrigger EventName="SelectedCellsChanged" >
                        <prism:InvokeCommandAction Command="{Binding OnSelectionChanged}"  CommandParameter="{Binding ElementName=rawGrid}"/>
                    </i:EventTrigger> 
                </i:Interaction.Triggers>

            </DataGrid>
        </Grid>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <ContentControl Grid.Column="2" prism:RegionManager.RegionName="{Binding RegionName}"/>
    </Grid>
</UserControl>
