<UserControl x:Class="SillyMonkey.View.DataGridTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SillyMonkey.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Unloaded="DataGridTab_Unloaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <c1:C1FlexGrid x:Name="grid" Grid.Column="0" />
        <GridSplitter Grid.Column="1"/>
        <TextBlock Text="{Binding FilePath}" Grid.Column="2"/>
    </Grid>    
</UserControl>
