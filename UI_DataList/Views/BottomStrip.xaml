<UserControl x:Class="UI_DataList.Views.BottomStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{Binding Info}" HorizontalAlignment="Right" Margin="20,0" TextAlignment="Right" VerticalAlignment="Center"/>
        <ProgressBar Grid.Column="1" Value="{Binding Progress}" Width="200" Height="16"/>
    </Grid>
</UserControl>
