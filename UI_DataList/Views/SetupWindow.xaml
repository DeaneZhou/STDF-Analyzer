<Window x:Class="UI_DataList.Views.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_DataList.Views"
        mc:Ignorable="d"
        Title="SetupWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <CheckBox Content="Use Test Text In Item Uid" IsChecked="{Binding IfCmpTextInUid}" Margin="10,10,0,0"/>
        </Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Orientation="Vertical">
            <Button Content="Apply And Close" Width="100" Command="{Binding Apply}"/>
        </StackPanel>
    </Grid>
</Window>
