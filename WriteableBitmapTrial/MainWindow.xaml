<Window x:Class="WriteableBitmapTrial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteableBitmapTrial"
        xmlns:m="clr-namespace:MapBase;assembly=MapBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*" MaxWidth="233"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Name="viewGrid">
            <!--<m:MapBaseControl MapDataSource="{Binding WaferColor}" EnableZoom="True"/>-->
        </Grid>
        <TextBox Grid.Column="0" Name="infoBlock" Visibility="Hidden"  Height="32" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <GridSplitter  Grid.Column="1" HorizontalAlignment="Stretch"/>
        <ListBox Grid.Column="2" Name="binInfo" SelectionMode="Single" FontFamily="Courier New">
            
        </ListBox>
    </Grid>
</Window>
