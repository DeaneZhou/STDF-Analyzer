<UserControl
    x:Class="UI_Chart.Views.SiteCorrChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    Name="chart"
    d:DesignHeight="700"
    d:DesignWidth="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="180" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="btSave"
                    Width="23"
                    Height="23"
                    Margin="10,0,5,0"
                    BorderThickness="0"
                    Click="btSave_Click"
                    ToolTip="Save">
                    <Image Width="16" Height="16" Source="/SillyMonkey.Core;component/Resource/icon/ForkAwesome-FloppyOutline.png" />
                </Button>
                <Button
                    x:Name="btCopy"
                    Width="23"
                    Height="23"
                    Margin="0,0,10,0"
                    BorderThickness="0"
                    Click="btCopy_Click"
                    ToolTip="Copy">
                    <Image Width="16" Height="16" Source="/SillyMonkey.Core;component/Resource/icon/Material-ContentCopy.png" />
                </Button>
                <RadioButton
                    x:Name="rbSigma"
                    Checked="rbSigma_Checked"
                    Content="Sigma"
                    IsChecked="True" />
                <RadioButton
                    x:Name="rbMinMax"
                    Checked="rbMinMax_Checked"
                    Content="MinMax"
                    IsChecked="False" />
                <RadioButton
                    x:Name="rbLimit"
                    Checked="rbLimit_Checked"
                    Content="Limit"
                    IsChecked="False" />
                <RadioButton
                    x:Name="rbUserRange"
                    Checked="rbUserRange_Checked"
                    Content="User"
                    IsChecked="False" />
                <Label Margin="4,0,0,0" Content="L:" />
                <TextBox
                    x:Name="tbLowRange"
                    Width="50"
                    Height="20"
                    MinWidth="15"
                    Margin="0,0,10,0"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,1"
                    FontSize="10" />
                <Label Content="H:" />
                <TextBox
                    x:Name="tbHighRange"
                    Width="50"
                    Height="20"
                    MinWidth="15"
                    Margin="0,0,0,0"
                    Background="Transparent"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,1"
                    FontSize="10" />
                <Button
                    x:Name="btApplyUserRange"
                    Width="23"
                    Height="23"
                    Margin="0,0,0,0"
                    BorderThickness="0"
                    Click="btApplyUserRange_Click"
                    ToolTip="Apply the limit">
                    <Image Width="16" Height="16" Source="/SillyMonkey.Core;component/Resource/icon/BootstrapIcons-CheckSquare.png" />
                </Button>
                <ToggleButton
                    x:Name="toggleOutlier"
                    Width="23"
                    Height="23"
                    Margin="20,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="toggleOutlier_Click"
                    IsChecked="True"
                    ToolTip="Re-Calculate without outlier">
                    <Image Width="16" Height="16" Source="/SillyMonkey.Core;component/Resource/icon/Material-AutoFix.png" />
                </ToggleButton>
                <ComboBox
                    Name="cbOutlierSigma"
                    Margin="0,0,0,0"
                    IsEnabled="{Binding ElementName=toggleOutlier, Path=IsChecked}"
                    SelectionChanged="cbOutlierSigma_SelectionChanged"
                    Style="{StaticResource LineStyleComboBox}">
                    <ComboBoxItem Content="6σ" IsSelected="True" />
                    <ComboBoxItem Content="5σ" />
                    <ComboBoxItem Content="4σ" />
                    <ComboBoxItem Content="3σ" />
                    <ComboBoxItem Content="2σ" />
                    <ComboBoxItem Content="1σ" />
                </ComboBox>
            </StackPanel>

            <ToggleButton
                x:Name="tgPopHisto"
                Grid.Column="1"
                Width="20"
                Height="20"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                ToolTip="Axis Line Setup">
                <Image Source="/SillyMonkey.Core;component/Resource/icon/VaadinIcons-EllipsisDotsV.png" />
            </ToggleButton>
            <Popup
                x:Name="popHisto"
                Width="80"
                Height="150"
                AllowsTransparency="True"
                HorizontalOffset="-65"
                IsOpen="{Binding ElementName=tgPopHisto, Path=IsChecked, Mode=TwoWay}"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=tgPopHisto}"
                PopupAnimation="Slide"
                StaysOpen="False">
                <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <CheckBox
                            x:Name="AxisLimitHisto"
                            Margin="3"
                            Click="AxisLimitHisto_Click"
                            Content="Limit"
                            IsChecked="True" />
                        <CheckBox
                            x:Name="AxisMinMaxHisto"
                            Margin="3"
                            Click="AxisMinMaxHisto_Click"
                            Content="MinMax"
                            IsChecked="False" />
                        <CheckBox
                            x:Name="AxisSigmaHisto"
                            Margin="3"
                            Click="AxisSigmaHisto_Click"
                            Content="Sigma"
                            IsChecked="True" />
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>
        <TextBox
            x:Name="tbSummary"
            Grid.Row="0"
            VerticalContentAlignment="Top"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto" />
        <GridSplitter Grid.Row="1" />
        <WpfPlot
            Name="histoChart"
            Grid.Row="3"
            MouseDoubleClick="histoChart_MouseDoubleClick"
            RenderOptions.BitmapScalingMode="NearestNeighbor"
            SnapsToDevicePixels="True" />
    </Grid>
</UserControl>
